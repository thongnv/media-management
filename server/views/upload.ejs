<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Media Management</title>
    <link href="https://s3.amazonaws.com/dynatable-docs-assets/css/bootstrap-2.3.2.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" media="all"
          rel="stylesheet" type="text/css"/>
    <link href="/css/dynatable.css" rel="stylesheet" type="text/css"/>
    <link href="/css/style.css" rel="stylesheet" type="text/css"/>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            type="text/javascript"></script>
    <script src="/js/plugins/dynatable.js" type="text/javascript"></script>
</head>
<body>

<div class="container">
    <h2>Uploads <a href="/" title="Add media"><i class="fa fa-plus" aria-hidden="true"></i></a></h2>
    <hr>
    <table id="my-table" class="table table-bordered">
        <thead>
        <th>ID</th>
        <th>NAME</th>
        <th>DATE</th>
        <th>DOWNLOAD</th>
        <th>DELETE</th>
        </thead>
        <tbody>
        </tbody>
    </table>
    <hr>
    <script type="text/javascript">
        const records = <%- JSON.stringify(records) %>
        const queryRecordCount = <%- JSON.stringify(queryRecordCount) %>
        const totalRecordCount = <%- JSON.stringify(totalRecordCount) %>

        const table = $('#my-table');
        const dynatable = table
            .bind('dynatable:init', function (e, dynatable) {
                dynatable.sorts.add('id', 1);
            })
            .bind('dynatable:afterUpdate', updateTable)
            .dynatable({
                dataset: {
                    records: records,
                    queryRecordCount: queryRecordCount,
                    totalRecordCount: totalRecordCount,
                }
            })
            .data('dynatable');

        function updateTable() {
            table.find('td a').click(function () {
                if (this.firstChild.className === "fa fa-trash-o") {
                    let dataId = $(this).data('id');
                    deleteFile(dataId);
                }
            })
        }

        function setToItems(argument) {
            console.log('updating');
            dynatable.settings.dataset.originalRecords = argument;
            dynatable.process();
        }

        function deleteFile(dataId) {
            let confirmation = confirm('Are You Sure?');
            if (confirmation) {
                $.ajax({
                    type: 'DELETE',
                    url: '/uploads/' + dataId
                }).done(function () {
                    alert('deleted')
                })
            }
        }
    </script>
</div>
</body>
</html>